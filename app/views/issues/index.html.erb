<div class="hero-unit">
  <h1>Reported issues</h1>
</div>

<table class="table table-striped table-bordered table-condensed pagination-centered">

  <tr>
    <th>Issue id</th>
    <th>User</th>
    <th>Title</th>
    <th>Description</th>
    <th>Opened</th>
    <th>Closed</th>
    <th>Raised by</th>
    <th>Owner</th>
    <th>Priority</th>
    <th>Progress</th>
    <th>Status</th>
    <% if current_user.account_type == 'pm' %>
      <th></th>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.id%></td>
    <td><%= issue.user_id %></td>
    <td><%= issue.title %></td>
    <td><%= issue.description %></td>
    <td><%= issue.opened %></td>
    <td><%= issue.closed %></td>
    <td><%= issue.raised_by %></td>
    <td><%= issue.owner %></td>
    <td><%= issue.priority %></td>
    <td><%= issue.progress %></td>
    <td><%= issue.status %></td>
    <% if current_user.account_type == 'pm' %>
      <td><%= link_to 'Show', issue %></td>
      <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
      <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
