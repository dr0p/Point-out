<%= form_for(@issue) do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :deadline%><br />
    <%= f.date_select :deadline %>

  </div>
  <div class="field">
    <%= f.label :priority %><br />
    <%= f.select :priority, options_for_select([["1 - low",1], [2,2], [3,3], [4,4], ["5 - HIGH!!",5]]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
