<body>


  <div id="user_nav" align="right">
    <% if current_user %>
        Hi <%= current_user.name%>!
      <%= link_to "Log out", log_out_path %> ??
    <% end %>
  </div>



<%= yield %>



  <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>



</body>
</html>
